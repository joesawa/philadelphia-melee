	// CSS/SCSS
	// ========================================
	"css.autoValidation": "Always",
	"css.format.spaceAroundSelectorSeparator": true,
	"css.lint.emptyRules": "ignore",
	"css.lint.propertyIgnoredDueToDisplay": "ignore",
	"css.lint.unknownAtRules": "ignore",
	"css.lint.unknownProperties": "ignore",
	"css.lint.validProperties": [
		"@apply",
	],
	"css.validate": false,
	"scss.format.spaceAroundSelectorSeparator": true,
	"scss.lint.argumentsInColorFunction": "ignore",
	"scss.lint.emptyRules": "ignore",
	"scss.lint.hexColorLength": "ignore",
	"scss.lint.unknownAtRules": "ignore",
	"scss.lint.unknownProperties": "ignore",

	// ========================================
	// HTML
	// ========================================
	"html.format.preserveNewLines": false,
	"html.format.templating": true,
	"html.format.wrapAttributes": "aligned-multiple",
	"html.format.wrapLineLength": 0,
	"html.validate.styles": false,

	// HTML CSS Support (disable noisy selector validation in embedded HTML)
	"html-css-class-completion.enableValidation": false,

	// ========================================
	// TAILWIND CSS
	// ========================================
	"tailwindCSS.experimental.classRegex": [
		["->class\\([^)]*\\)", "([^)]*)"],
		["->class\\(\\s*['\"`]([^'\"`]*)['\"`]", "([^'\"`]*)"],
		["->tailwind\\([^)]*\\)", "([^)]*)"],
		["->tailwind\\(\\s*['\"`]([^'\"`]*)['\"`]", "([^'\"`]*)"],
		["['\"`]([^'\"`]*)['\"`]", "([^'\"`]*)"]
	],
	"tailwindCSS.files.exclude": [
		"**/.git/**",
		"**/node_modules/**",
		"**/composer/**",
		"**/.hg/**",
		"**/.svn/**",
		"**/*.md",
		"**/*.mdc",
		"**/*.rules.mdc",
		"**/.cursor/**",
		"**/docs/**",
		"**/inc/**.php",
	],
	"tailwindCSS.includeLanguages": {
		"php": "html"
	},
	"tailwindCSS.lint.cssConflict": "ignore",
	"tailwindCSS.lint.invalidApply": "warning",
	"tailwindCSS.lint.invalidConfigPath": "warning",
	"tailwindCSS.lint.invalidScreen": "warning",
	"tailwindCSS.lint.invalidTailwindDirective": "warning",
	"tailwindCSS.lint.invalidVariant": "warning",
	"tailwindCSS.validate": true,

	// ========================================
	// UTILITY EXTENSIONS
	// ========================================
	"prettify-ts.enabled": true,
	"prettify-ts.maxFunctionSignatures": 4,
	"prettify-ts.maxCharacters": 1000,
	"prettify-ts.maxDepth": 1,
	"prettify-ts.maxProperties": 10,
	"prettify-ts.maxSubProperties": 5,
	"prettify-ts.typeIndentation": 2,

	// ========================================
	// ERROR LENS
	// ========================================
	"errorLens.enableOnDiffView": true,
	"errorLens.problemRangeDecorationEnabled": true,
	"errorLens.gutterIconsEnabled": true,
	"errorLens.messageBackgroundMode": "message",
	"errorLens.followCursor": "closestProblem",
	"errorLens.ignoreUntitled": true,
	"errorLens.excludeByMessage": [
		"Missing semicolon",
		"blank line",
		"Trailing spaces",
		"Unexpected trailing",
		"CSS selector",
		"is assigned a value",
		"applies the same",
	],
	"json.schemaDownload.enable": true,
	"php-docblocker.useShortNames": true,
	"markdown-preview-enhanced.enablePreviewZenMode": false,
	"markdown-preview-enhanced.previewTheme": "one-dark.css",
	"markdown-preview-enhanced.codeBlockTheme": "auto.css",
	"markdownlint.lintWorkspaceGlobs": [
		"**/*.{md,mkd,mdwn,mdown,markdown,markdn,mdtxt,mdtext,workbook}",
		"!**/*.code-search",
		"!**/bower_components",
		"!**/node_modules",
		"!**/.git",
		"!**/vendor",
		"!**/composer",
		"!**/chats",
		"chats",
	],
	"markdownlint.focusMode": true,
}