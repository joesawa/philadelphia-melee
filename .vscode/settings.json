{
	// ========================================
	// EDITOR
	// ========================================
	"editor.acceptSuggestionOnEnter": "smart",
	"editor.autoClosingQuotes": "never",
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.removeUnusedImports": "explicit",
		"source.fixAll.biome": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.fixAll.markdownlint": "always",
	},
	"editor.defaultFormatter": "dbaeumer.vscode-eslint",
	"editor.detectIndentation": false,
	"editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.formatOnPaste": false,
	"editor.formatOnSave": false,
	"editor.formatOnType": true,
	"editor.hover.delay": 200,
	"editor.hover.enabled": true,
	"editor.hover.hidingDelay": 0,
	"editor.inlayHints.fontSize": 12,
	"editor.inlayHints.maximumLength": 30,
	"editor.inlineSuggest.enabled": true,
	"editor.insertSpaces": false,
	"editor.lineHeight": 22,
	"editor.minimap.maxColumn": 100,
	"editor.minimap.renderCharacters": false,
	"editor.padding.top": 100,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"editor.semanticHighlighting.enabled": true,
	"editor.semanticTokenColorCustomizations": {
		"[Material Theme*]": {
			"enabled": true,
			"rules": {
				"variable.declaration.readonly.local": "#F07178",
				"variable.declaration.readonly": "#F07178",
				"parameter.declaration": "#F07178",
				"variable.readonly.local": "#EEFFFF",
			},
		},
	},
	"editor.suggestOnTriggerCharacters": false,
	"editor.tokenColorCustomizations": {
		"[Material Theme*]": {
			"textMateRules": [
				{
					"scope": [
						"string.quoted.single",
						"string.quoted.double",
						"string.template",
					],
					"settings": {
						"foreground": "#C3E88D",
					},
				},
				{
					"scope": [
						"keyword.operator.spread",
						"keyword.operator.new",
						"keyword.operator.logical",
						"keyword.operator.key",
						"keyword.operator.ternary",
						"keyword.operator.comparison",
						"keyword.operator.assignment",
						"keyword.operator.class",
						"keyword.operator.string",
						"keyword.operator.null-coalescing",
						"keyword.operator.arithmetic",
						"keyword.operator.relational",
					],
					"settings": {
						"foreground": "#C792EA",
					},
				},
				{
					"scope": [
						"variable.parameter.js",
						"variable.other.constant.js",
						"variable.language.this",
						"entity.name.tag.nesting.css",
					],
					"settings": {
						"foreground": "#F07178",
					},
				},
				{
					"scope": [
						"variable.language.this",
					],
					"settings": {
						"fontStyle": "italic",
					},
				},
				{
					"scope": [
						"string.regexp",
						"constant.character.escape.backslash.regexp",
					],
					"settings": {
						"foreground": "#89DDFF",
					},
				},
				{
					"scope": [
						"constant.language.json.comments",
						"constant.language.boolean",
						"constant.language.php",
						"constant.language.undefined",
						"constant.language.null",
						"entity.name.tag.documentation",
						"entity.name.tag.documentation.jsdoc",
						"entity.name.tag.documentation.ts",
						"entity.name.tag.documentation.js",
						"entity.name.tag.documentation.jsx",
						"entity.name.tag.documentation.tsx",
						"storage.type.class.jsdoc",
						"storage.type.function.jsdoc",
						"storage.type.variable.jsdoc",
						"variable.other.jsdoc",
						"variable.parameter.jsdoc",
						"entity.name.tag.jsdoc",
						"entity.name.type.instance.jsdoc",
						"constant.language.jsdoc",
						"keyword.other.documentation",
						"keyword.other.documentation.js",
						"keyword.other.documentation.ts",
						"keyword.other.documentation.jsx",
						"keyword.other.documentation.tsx",
						"variable.other.documentation",
						"variable.other.documentation.js",
						"variable.other.documentation.ts",
						"variable.other.documentation.jsx",
						"variable.other.documentation.tsx",
						"storage.type.documentation",
						"storage.type.documentation.js",
						"storage.type.documentation.ts",
						"storage.type.documentation.jsx",
						"storage.type.documentation.tsx",
						"punctuation.definition.block.tag.jsdoc",
						// "entity.name.tag.documentation.phpdoc",
						// "keyword.other.documentation.phpdoc",
						// "punctuation.definition.block.tag.phpdoc",
						// "keyword.other.phpdoc.php"
					],
					"settings": {
						"foreground": "#F78C6C",
					},
				},
				{
					"scope": [
						// "entity.name.type.phpdoc",
						// "entity.name.type.instance.phpdoc",
						// "support.class.phpdoc",
						// "support.type.builtin.phpdoc",
						// "support.other.namespace.phpdoc",
						// "storage.type.phpdoc",
						"constant.other.php",
						"support.other.namespace",
					],
					"settings": {
						"foreground": "#FFCB6B",
					},
				},
				{
					"scope": [
						"meta.generic.phpdoc",
						// "punctuation.definition.generic.begin.phpdoc",
						// "punctuation.definition.generic.end.phpdoc",
						// "punctuation.separator.delimiter.phpdoc",
						// "punctuation.section.array.begin.phpdoc",
						// "punctuation.section.array.end.phpdoc",
					],
					"settings": {
						"foreground": "#C792EA",
					},
				},
				{
					"scope": [
						"comment.block.documentation",
						"comment.line.double-slash",
						"comment.line.double-dash",
						"comment.line.number-sign",
						"comment.line.percentage",
						"comment.block.documentation.phpdoc.php"
					],
					"settings": {
						"foreground": "#546E7A",
					},
				},
				{
					"scope": [
						"comment.block.documentation.js",
						"comment.block.documentation.ts",
						"comment.block.documentation.jsx",
						"comment.block.documentation.tsx",
					],
					"settings": {
						"foreground": "#546E7A",
					},
				},
				{
					"scope": [
						"comment.block.documentation",
						"comment.block.documentation.js",
						"comment.block.documentation.ts",
						"comment.block.documentation.jsx",
						"comment.block.documentation.tsx",
						"comment.line.double-slash",
						"comment.line.double-slash.js",
						"comment.line.double-slash.ts",
						"comment.line.double-slash.jsx",
						"comment.line.double-slash.tsx",
						"comment.line.double-dash",
						"comment.line.number-sign",
						"comment.line.percentage",
					],
					"settings": {
						"foreground": "#546E7A",
					},
				},
			],
		},
	},
	"php.docblock.colorMode": "simple",
	"editor.wordWrap": "on",
	"editor.experimental.preferTreeSitter.css": true,
	// "editor.experimental.preferTreeSitter.typescript": true,
	"editor.linkedEditing": true,
	"editor.smoothScrolling": true,

	// ========================================
	// WORKBENCH
	// ========================================
	"workbench.activityBar.orientation": "vertical",
	"workbench.colorTheme": "Material Theme High Contrast",
	"workbench.commandPalette.experimental.suggestCommands": true,
	"workbench.commandPalette.history": 500,
	"workbench.commandPalette.preserveInput": true,
	"workbench.editor.decorations.colors": true,
	"workbench.externalBrowser": "chrome",
	"workbench.hover.delay": 100,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.list.horizontalScrolling": true,
	"workbench.panel.defaultLocation": "right",
	"workbench.preferredDarkColorTheme": "Material Theme High Contrast",
	"workbench.preferredHighContrastColorTheme": "Material Theme High Contrast",
	"workbench.preferredHighContrastLightColorTheme": "Material Theme High Contrast",
	"workbench.preferredLightColorTheme": "Material Theme High Contrast",
	"workbench.sash.hoverDelay": 250,
	"window.zoomLevel": -1,
	"workbench.editorAssociations": {
		"*.svg": "default"
	},

	// ========================================
	// TERMINAL
	// ========================================
	"terminal.integrated.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
	"terminal.integrated.fontSize": 12.5,
	"terminal.integrated.enableMultiLinePasteWarning": "never",

	// ========================================
	// FILE MANAGEMENT
	// ========================================
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.decorations.badges": false,
	"files.associations": {
		"*.css": "tailwindcss",
	},
	"files.trimTrailingWhitespace": true,
	"security.workspace.trust.untrustedFiles": "open",

	// ========================================
	// GIT
	// ========================================
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"git.ignoreMissingGitWarning": true,
	"git.ignoreRebaseWarning": true,

	// ========================================
	// EXTENSIONS
	// ========================================
	"extensions.ignoreRecommendations": true,

	// ========================================
	// GITHUB COPILOT
	// ========================================
	"github.copilot.chat.codesearch.enabled": true,
	"github.copilot.chat.followUps": "always",
	"github.copilot.chat.search.semanticTextResults": true,
	"github.copilot.editor.enableAutoCompletions": true,
	"github.copilot.enable": {
		"*": true,
		"markdown": false,
		"php": true,
		"plaintext": false,
		"postcss": true,
		"yaml": false,
	},

	// ========================================
	// CURSOR AI
	// ========================================
	"cursor.cpp.enablePartialAccepts": true,
	"cursor.cpp.disabledLanguages": [],
	"cursor.composer.shouldQueueWhenGenerating": false,
	"cursor.composer.shouldAutoScrollToBottom": false,
	"cursor.composer.textSizeScale": 1.3,
	"cursorStats.enableAlerts": false,
	"cursorStats.progressBarCriticalThreshold": 90,
	"cursorStats.showProgressBars": true,
	"cursor.composer.usageSummaryDisplay": "always",
	"cursor.diffs.useCharacterLevelDiffs": true,
	"cursor.composer.queueMessageDefaultBehavior": "queue",

	// ========================================
	// DIFF EDITOR
	// ========================================
	"diffEditor.codeLens": true,
	"diffEditor.ignoreTrimWhitespace": false,

	// ========================================
	// EMMET
	// ========================================
	"emmet.includeLanguages": {
		"*.css": "scss",
	},

	// ========================================
	// BETTER ALIGN
	// ========================================
	"betterAlign.surroundSpace": {
		"colon": [
			-1,
			1,
		],
		"comment": 2,
	},

	// ========================================
	// SORTING
	// ========================================
	"sort-imports.on-save": true,
	"sortLines.filterBlankLines": true,

	// ========================================
	// LANGUAGE-SPECIFIC FORMATTERS
	// ========================================
	"[scss]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint",
	},
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
		"tailwindCSS.validate": false,
	},
	"[json][jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"tailwindCSS.validate": false,
	},
	"[markdown]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
		"tailwindCSS.validate": false,
	},
	"[php]": {
		"editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
		// "editor.defaultFormatter": "DEVSENSE.phptools-vscode",
		"tailwindCSS.validate": false,
		"tailwindCSS.lint.cssConflict": "ignore",
		"tailwindCSS.lint.invalidApply": "ignore",
		"tailwindCSS.lint.invalidConfigPath": "ignore",
		"tailwindCSS.lint.invalidScreen": "ignore",
		"tailwindCSS.lint.invalidTailwindDirective": "ignore",
		"tailwindCSS.lint.invalidVariant": "ignore",
		"css.validate": false,
		"less.validate": false,
		"scss.validate": false,
		"css.lint.duplicateProperties": "ignore",
		"css.lint.unknownVendorSpecificProperties": "ignore",
		"css.lint.unknownAtRules": "ignore",
		"css.lint.unknownProperties": "ignore",
		"css.lint.duplicateSelectors": "ignore"
	},
	"[shellscript]": {
		"editor.defaultFormatter": "foxundermoon.shell-format",
		"tailwindCSS.validate": false,
	},
	"[svg]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[typescript][javascriptreact][typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.formatOnSave": true,
		"tailwindCSS.validate": false,
	},

	// ========================================
	// ESLINT
	// ========================================
	"eslint.format.enable": true,
	"eslint.useFlatConfig": true,
	"eslint.options": {
		"overrideConfigFile": "config/eslint/eslint.config.cjs",
	},
	"eslint.workingDirectories": [
		{
			"directory": ".",
			"changeProcessCWD": true,
		},
	],
	"eslint.validate": [
		"cjs",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"vue",
	],

	// ========================================
