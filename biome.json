{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"plugins": ["node_modules/biome-plugin-no-type-assertion/no-type-assertion.grit"],
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [":URL:", ":NODE:"]
					}
				}
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!.cursor",
			"!.next",
			"!.vscode",
			"!build",
			"!dist",
			"!node_modules",
			"!plans"
		]
	},
	"formatter": {
		"attributePosition": "auto",
		"enabled": true,
		"expand": "auto",
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "warn"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "warn"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	}
}
